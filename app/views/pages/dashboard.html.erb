<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-4">
      <h1>Username: <%= @user.username %></h1>
      <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key,class:"rounded-circle", style: "width: 400px; height:400px;" %>
      <% else %>
        <%= image_tag "https://upload.wikimedia.org/wikipedia/fr/b/b1/Spitfire_Logo.jpg",class:"rounded-circle", style: "width: 400px; height:400px;" %>
      <% end %>
      <%= link_to "Edit your profile", edit_user_registration_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>
